---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Green Grove Construction"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Quality Fencing & Construction Services
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Green Grove Construction specializes in delivering durable and beautiful fencing and construction solutions for residential and commercial properties in Santa Barbara County.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#contact"
        class="flex gap-1 items-center justify-center bg-green-600 text-white px-4 py-2 rounded"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-envelope" />
         Get a Quote
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="#services"
        class="flex gap-1 items-center justify-center border border-green-600 text-green-600 px-4 py-2 rounded"
        target="_self">
        <Icon class="text-green-600 w-4 h-4" name="bx:bxs-briefcase" />
         Our Services
      </Link>
    </div>
  </div>
</main>
