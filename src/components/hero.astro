---
import { Picture } from "astro:assets";
import heroImage from "assets/construction.svg"; // Ensure this points to an image that represents your construction business
import Link from "@components/ui/link.astro";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24 bg-gray-100">
  <div class="py-6 md:order-1 hidden md:block max-w-md mx-auto">
    <Picture
      src={heroImage}
      alt="Walker and Cole Construction at work"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 50vw"
      loading="eager"
      format="avif"
      class="w-full h-auto max-h-[300px]"
    />
  </div>
  <div class="text-center lg:text-left">
    <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-primary lg:tracking-tight xl:tracking-tighter">
      Your One-Stop Solution for Home Services & Construction
    </h1>
    <p class="text-lg mt-4 text-secondary max-w-xl">
      From major construction projects to everyday household tasks, Walker and Cole Construction offers reliable, high-quality services across Santa Barbara County.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
      <Link
        href="contact"
        class="bg-gradient-to-r from-yellow-400 to-orange-500 text-white px-8 py-4 rounded-full font-bold inline-block text-lg hover:from-yellow-500 hover:to-orange-600 hover:scale-110 transition duration-300 ease-in-out shadow-xl">
        Get Your Free Quote
      </Link>
      <Link
        href="home-services"
        class="border-2 border-teal-600 text-teal-600 px-8 py-4 rounded-full font-bold inline-block text-lg hover:bg-teal-600 hover:text-white hover:scale-110 transition duration-300 ease-in-out shadow-xl">
        Schedule a Home Service
      </Link>
    </div>
  </div>
</main>
