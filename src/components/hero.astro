---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png"; // Ensure this points to an image that represents your construction business
import Link from "@components/ui/link.astro";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Green Grove Construction at work"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Transforming Your Space with Quality Fencing & Construction
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      At Green Grove Construction, we bring your vision to life with expert craftsmanship and reliable service. Serving Santa Barbara County, we specialize in fences, custom construction, and more.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#contact"
        class="bg-primary text-white px-6 py-3 rounded-full font-bold inline-block hover:bg-green-800 transition duration-300">
        Request a Quote
      </Link>
      <Link
        href="#services"
        class="border border-green-700 text-green-700 px-6 py-3 rounded-full font-bold inline-block hover:bg-green-100 transition duration-300">
        View Our Services
      </Link>
    </div>
  </div>
</main>
