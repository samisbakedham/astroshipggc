---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import '@fontsource-variable/bricolage-grotesque';

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg", // Replace with your actual OpenGraph image path if different
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Green Grove Construction"
  : "Green Grove Construction - Quality Fencing & Landscaping Services";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> <!-- Update this path if you have a new favicon -->
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Green Grove Construction offers high-quality fencing, landscaping, and construction services in Santa Barbara County."
      canonical={canonicalURL}
      twitter={{
        creator: "@GreenGroveConstruction", // Replace with your actual Twitter handle
        site: "@GreenGroveConstruction",    // Replace with your actual Twitter handle
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Green Grove Construction - Quality Fencing & Landscaping Services`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Green Grove Construction Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
