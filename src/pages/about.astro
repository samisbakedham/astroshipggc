---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

// Company mission and description
const aboutDescription = `
  With over 10 years of experience, Walker and Cole Construction has been providing top-notch construction, landscaping, and fencing services in Santa Barbara County and San Luis Obispo. As a new unlicensed contractor, we are committed to delivering outstanding quality and customer satisfaction at affordable rates. From residential renovations to commercial builds, we bring our expertise and passion to every task, ensuring that every project exceeds expectations.
`;

const visionStatement = `
  Our vision is to become the most trusted name in construction services in the San Luis Obispo and Santa Barbara areas by consistently delivering exceptional results and building lasting relationships with our clients.
`;

const values = [
  "Integrity in every action we take.",
  "Excellence in craftsmanship and customer service.",
  "Transparency and open communication with our clients.",
  "Commitment to the communities we serve."
];

const teamMembers = [
  {
    name: "Samuel Safahi",
    title: "Founder & CEO",
    description: "With a passion for construction and a decade of experience in the industry, Samuel leads our company with dedication and a hands-on approach."
  },
  {
    name: "Zachary Lakin",
    title: "Project Manager",
    description: "Zachary oversees all our projects, ensuring timelines are met and quality is maintained, with a focus on effective communication and problem-solving."
  },
  {
    name: "Dominic Gary",
    title: "Lead Technician",
    description: "Dominic brings extensive technical expertise to the team, making sure each job is done right the first time with precision and skill."
  }
];
---

<Layout title="About">
  <Container>
    <Sectionhead title="Walker and Cole Construction" subtitle="Our Mission" />

    <div class="mx-auto max-w-3xl mt-10 text-center">
      <p class="text-lg leading-relaxed text-textDark mb-10">
        {aboutDescription}
      </p>
      <div class="bg-primary p-8 rounded-lg text-white mb-10 pb-16">
        <h3 class="text-2xl font-bold mb-4">Our Vision</h3>
        <p class="text-lg leading-relaxed">
          {visionStatement}
        </p>
      </div>
      <div class="bg-secondary p-8 rounded-lg text-white mb-10 pb-16">
        <h3 class="text-2xl font-bold mb-4">Our Values</h3>
        <ul class="list-disc pl-5 text-left text-lg leading-relaxed">
          {values.map((value) => (
            <li>{value}</li>
          ))}
        </ul>
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-8 mx-auto max-w-6xl mt-12 pb-16">
      {teamMembers.map((member) => (
        <div class="group p-8 rounded-lg border border-gray-300 bg-background shadow-md hover:shadow-lg transition">
          <div class="text-center">
            <h2 class="text-2xl font-bold text-primary mb-2">{member.name}</h2>
            <h3 class="text-lg text-secondary mb-4">{member.title}</h3>
            <p class="text-base text-textDark">
              {member.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </Container>
</Layout>