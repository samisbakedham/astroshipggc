---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

// Modify this to reflect your company's background and mission
const aboutDescription = `
  With over 10 years of experience, Green Grove Construction has been providing top-notch construction, landscaping, and fencing services in Santa Barbara County. Our team is dedicated to delivering excellence in every project, with a focus on quality, reliability, and customer satisfaction. From residential renovations to commercial builds, we bring our expertise and passion to every task.
`;
---

<Layout title="About">
  <Container>
    <Sectionhead title="About Us" subtitle="Professional Construction & Landscaping Services" />

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">
        Our Mission
      </h2>
      <p class="text-lg leading-relaxed text-slate-500">
        {aboutDescription}
      </p>
    </div>
    <!-- You can remove the team section if it's not relevant -->
    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-12">
      <div class="group">
        <div class="text-center">
          <h2 class="text-lg text-gray-800">Joaquin Gutierrez/h2>
          <h3 class="text-sm text-slate-500">Founder & CEO</h3>
        </div>
      </div>
      <div class="group">
        <div class="text-center">
          <h2 class="text-lg text-gray-800">Samuel Safahi</h2>
          <h3 class="text-sm text-slate-500">Project Manager</h3>
        </div>
      </div>
      <div class="group">
        <div class="text-center">
          <h2 class="text-lg text-gray-800">BigWang Gary</h2>
          <h3 class="text-sm text-slate-500">Lead Technician</h3>
        </div>
      </div>
    </div>
  </Container>
</Layout>
