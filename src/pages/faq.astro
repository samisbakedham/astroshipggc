---
import Layout from "@layouts/Layout.astro";

export const faqs = [
  {
    question: "What areas do you serve?",
    answer: "We provide services throughout Santa Barbara County and the surrounding areas."
  },
  {
    question: "Are you licensed and insured?",
    answer: "Yes, Walker and Cole Construction is fully licensed and insured for your peace of mind."
  },
  {
    question: "How can I get a quote for my project?",
    answer: "You can request a free consultation through our website or contact us directly by phone or email."
  },
  {
    question: "What services do you offer?",
    answer: "We specialize in fencing, landscaping, artificial turf installation, general contracting, mowing, and more."
  }
];
---

<Layout title="FAQs">
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto max-w-4xl">
      <h2 class="text-4xl font-bold text-center text-green-700 mb-8">Frequently Asked Questions</h2>
      <div class="space-y-4">
        {faqs.map((faq, index) => (
          <div class="border border-gray-300 rounded-lg">
            <button 
              class="w-full text-left text-lg font-medium text-gray-800 p-4 flex justify-between items-center"
              data-index={index}
            >
              {faq.question}
              <svg 
                class="w-5 h-5 transform transition-transform rotate-0" 
                data-icon 
                fill="none" 
                stroke="currentColor" 
                strokeWidth="2" 
                viewBox="0 0 24 24"
              >
                <path 
                  d="M19 9l-7 7-7-7" 
                  strokeLinecap="round" 
                  strokeLinejoin="round" 
                />
              </svg>
            </button>
            <div 
              class="mt-2 text-gray-600 hidden px-4 pb-4" 
              data-answer
              id={`answer-${index}`}
            >
              {faq.answer}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const faqButtons = document.querySelectorAll('button[data-index]');

      faqButtons.forEach((button) => {
        button.addEventListener('click', () => {
          const index = button.getAttribute('data-index');
          const answer = document.getElementById(`answer-${index}`);
          const icon = button.querySelector('svg[data-icon]');

          if (answer.classList.contains('hidden')) {
            answer.classList.remove('hidden');
            icon.classList.add('rotate-180');
          } else {
            answer.classList.add('hidden');
            icon.classList.remove('rotate-180');
          }
        });
      });
    });
  </script>
</Layout>
