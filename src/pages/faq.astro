---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";

export const faqs = [
  {
    question: "What areas do you serve?",
    answer: "We provide services throughout Santa Barbara County and the surrounding areas."
  },
  {
    question: "Are you licensed and insured?",
    answer: "Yes, Walker and Cole Construction is fully licensed and insured for your peace of mind."
  },
  {
    question: "How can I get a quote for my project?",
    answer: "You can request a free consultation through our website or contact us directly by phone or email."
  },
  {
    question: "What services do you offer?",
    answer: "We specialize in fencing, landscaping, artificial turf installation, general contracting, mowing, and more."
  }
];
---

<Layout title="FAQs">
  <Container>
    <section class="py-16 bg-background">
      <h2 class="text-4xl font-bold text-primary text-center mb-8">Frequently Asked Questions</h2>
      <div class="space-y-4">
        {faqs.map((faq, index) => (
          <details key={index} class="border border-secondary rounded-lg p-4 bg-white shadow-sm transition hover:shadow-md">
            <summary class="font-bold text-primary cursor-pointer">
              {faq.question}
            </summary>
            <p class="mt-2 text-secondary">{faq.answer}</p>
          </details>
        ))}
      </div>
    </section>
  </Container>
</Layout>
