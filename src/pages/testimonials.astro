---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";

export const testimonials = [
  {
    name: "John Smith",
    feedback: "Green Grove Construction transformed my backyard! Their team was professional, and the quality of their work was exceptional.",
    location: "Santa Barbara, CA"
  },
  {
    name: "Emily Johnson",
    feedback: "We hired them for landscaping and couldn't be happier. They exceeded our expectations with their attention to detail.",
    location: "Goleta, CA"
  },
  {
    name: "Michael Brown",
    feedback: "Great experience! The team was punctual, friendly, and completed the project on time. Highly recommended.",
    location: "Orcutt, CA"
  }
];
---

<Layout title="Testimonials">
  <section class="py-16 bg-white">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl font-bold text-gray-800 mb-8">What Our Clients Say</h2>
      <div class="grid sm:grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <div class="shadow-lg rounded-lg p-6 bg-gray-50">
            <p class="text-gray-600 italic mb-4">"{testimonial.feedback}"</p>
            <h3 class="font-bold text-lg">{testimonial.name}</h3>
            <p class="text-sm text-gray-500">{testimonial.location}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
