---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";

// Array of testimonials
export const testimonials = [
  {
    name: "John Doe",
    role: "Homeowner",
    testimonial: "Walker and Cole Construction transformed our backyard. The quality of work and attention to detail were outstanding. We couldn't be happier with the results!",
  },
  {
    name: "Jane Smith",
    role: "Business Owner",
    testimonial: "Professional, reliable, and skilled. Our commercial property renovation was handled with expertise and care. Highly recommend their services.",
  },
  {
    name: "Mark Johnson",
    role: "Landscaping Client",
    testimonial: "Their landscaping team brought our vision to life. The artificial turf installation was done perfectly, and it looks amazing!",
  },
];
---

<Layout title="Testimonials">
  <Container>
    <section class="py-16 bg-background">
      <h2 class="text-4xl font-bold text-primary text-center mb-8">Client Testimonials</h2>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {testimonials.map((testimonial, index) => (
          <div key={index} class="p-6 border border-secondary rounded-lg bg-white shadow-sm transition hover:shadow-md">
            <p class="text-secondary mb-4">"{testimonial.testimonial}"</p>
            <div class="text-primary font-bold">{testimonial.name}</div>
            <div class="text-sm text-gray-500">{testimonial.role}</div>
          </div>
        ))}
      </div>
    </section>
  </Container>
</Layout>
